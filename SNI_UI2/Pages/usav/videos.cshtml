@page 
@model SNI_UI2.Pages.Usav.ReproducirVideoModel
@using SNI_UI2.Services

@{
    Layout = "_Layout_Usav";
}

<section class="conten-videos">
    @if (Model.SelectedVideo != null)
    {
        <div class="video-container">
            <div class="video">
                <iframe class="ivideo" width="70%" height="500px" frameborder="0" allowfullscreen 
                src="https://www.youtube.com/embed/@Model.SelectedVideo.URL"></iframe>
            </div>
            <div class="texto">
                <div class="destalles">
                    <h2>@Model.SelectedVideo.Titulo</h2>
                    <p>@Model.SelectedVideo.Descripcion</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>Video no encontrado</p>
    }
</section>